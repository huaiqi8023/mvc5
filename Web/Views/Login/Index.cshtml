@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    @Styles.Render("~/Content/bootstrap-theme.min.css")
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")" type="text/javascript"></script>
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    <script>
        if (window.parent.window != window) {
            window.top.location.href = "/Login/Index";
        }
        $(function () {
            ChangeCode();
            Login();
        })
        function Login() {
            $("#btnLogin").click(function () {
                var postData = {
                    User_Name: $.trim($("#txtUserName").val()),
                    PassWord: $.trim($("#txtPassWord").val()),
                    Code: $("#txtCode").val()
                }
                $.post("/Login/CheckUserLogin", postData, function (result) {
                    if (result == "Success") {
                        window.location.href = "/Home/Index";
                    } else {
                        alert(result);
                        window.location.href = "/Login/Index";
                    }
                })
            });
        }

        function ChangeCode() {
            var url = $("#imgCode").attr("src");
            $("#imgCode").attr("src", url + new Date().getSeconds());
        }
    </script>
</head>
<body>
    <div class="body-content">
        <form id="login" method="post" novalidate="novalidate">
            <table class="table">
                <tr>
                    <th colspan="2">用户登录信息</th>
                </tr>
                <tr>
                    <td><label for="UserName">用户名：</label></td>
                    <td><input id="txtUserName" type="text" value="@ViewBag.UserName" /></td>
                </tr>
                <tr>
                    <td><label for="PassWord">密码：</label></td>
                    <td><input id="txtPassWord" type="password" /></td>
                </tr>
                <tr>
                    <td><label for="Code">验证码：</label></td>
                    <td><input id="txtCode" type="text" /></td>
                </tr>
                <tr>
                    <td>验证码：</td>
                    <td>
                        <img src="/Login/CheckCode?ID=1111" id="imgCode" alt="单击可刷新" onclick="ChangeCode();" />
                        <div style="float:right; margin-top: 5px;">
                            <a href="javascript:void(0)" onclick="ChangeCode(); return false;">看不清，换一张</a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:center;">
                        <input type="button" id="btnLogin" value="确定" class="btn" />
                    </td>
                </tr>
            </table>
        </form>

    </div>
</body>
</html>
